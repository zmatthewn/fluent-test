{
  "policies": [
    {
      "handler": {
        "export": "SetHeadersInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "headers": [
            {
              "name": "Authorization",
              "value": "$env(BOOMI_EVENT_STREAMS_TOKEN)"
            }
          ]
        }
      },
      "name": "boomi-event-stream-bearer-token",
      "policyType": "set-headers-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/fluent-signature-verify-hmac-auth-inbound)"
      },
      "name": "fluent-signature-verify-hmac-auth-inbound",
      "policyType": "custom-code-inbound"
    }
  ]
}